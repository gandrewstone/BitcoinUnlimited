def p2pkh(pubkeyhash, @sig, @pubkey)
  {
  @sig
  @pubkey
  OP_DUP
  OP_HASH160
  pubkeyhash
  OP_EQUALVERIFY
  OP_CHECKSIG
  }

def p2pkhIsosemantic(pubkeyhash, @sig, @pubkey)
  {
  @sig
  @pubkey
  OP_DUP
  OP_HASH160
  pubkeyhash
  OP_EQUALVERIFY
  OP_CHECKSIGVERIFY
  OP_1
  }

def p2sh(scriptHash, @script)
  {
  OP_HASH160(@script)
  scriptHash
  OP_EQUAL
  // exec the script
  }

def multisig(m, ofN, hashes..., @sigs...)
  {
  m
  hashes
  ofN
  OP_CHECKMULTISIG
  }


def splitp2pkh(pubkeyhash, @sig, @pubkeya, @pubkeyb)
  {
  @sig
  @pubkeya
  @pubkeyb
  OP_CAT
  OP_DUP
  OP_HASH160
  pubkeyhash
  OP_EQUALVERIFY
  OP_CHECKSIG
  }

